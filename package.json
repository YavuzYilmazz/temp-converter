{
  "name": "@yavuz-yilmaz/temp-converter",
  "version": "1.0.1",
  "description": "Tiny zero-dep temperature converter (C↔F↔K)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean && mv dist/index.js dist/index.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build && pnpm test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "size": "bundlesize || (pnpm build && ls -lh dist/)"
  },
  "keywords": [
    "temperature",
    "celsius",
    "fahrenheit",
    "kelvin",
    "converter",
    "typescript",
    "esm",
    "cjs"
  ],
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
